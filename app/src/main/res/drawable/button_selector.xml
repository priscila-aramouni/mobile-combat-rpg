<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#666666"/>
            <solid android:color="@color/owGray"></solid>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/owOrange"/>
            <solid android:color="#D8780B"></solid>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/owOrange"/>
            <solid android:color="#D8780B"></solid>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"></corners>
            <solid android:color="@color/owOrange"></solid>
        </shape>
    </item>
</selector>
